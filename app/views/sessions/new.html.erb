<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field form-group">
    <%= label_tag :email %><br />
    <%= email_field_tag :email, params[:email] %>
  </div>
  <div class="field form-group">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <br>
  <div class="actions"><%=submit_tag "Log In" %></div>
<% end %>
